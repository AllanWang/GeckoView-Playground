{
    "manifest_version": 3,
    "name": "geckotest",
    "version": "1.0",
    "description": "Example messaging web extension.",
    "browser_specific_settings": {
        "gecko": {
            "id": "geckoview_chordata_test@pitchedapps"
        }
    },
    "host_permissions": [
        "*://*.facebook.com/*"
    ],
    "background": {
        "scripts": [
            "background/cookies.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/chordata.js",
                "js/messaging.js"
            ]
        },
        {
            "matches": [
                "*://*.facebook.com/*"
            ],
            "js": [
                "js/click_a.js"
            ]
        }
    ],
    "permissions": [
        "cookies",
        "nativeMessaging",
        "nativeMessagingFromContent",
        "mozillaAddons",
        "geckoViewAddons"
    ]
}